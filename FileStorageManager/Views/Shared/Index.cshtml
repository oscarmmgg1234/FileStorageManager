@model FileStorageManager.Models.Account.LoginViewModel

<div class="full-page">
    <div class="form-container">
        <h3 class="form-title">Login</h3>
        <form method="post">
            <label>Email</label>
            <input id="email" name="email" placeholder="enter Email" asp-for="Email" />
            <label>Password</label>
            <input id="password" name="password" placeholder="enter Password" asp-for="Password" />
            <button type="submit" asp-controller="Account" asp-action="Login">Submit</button>
        </form>
    </div>
</div>